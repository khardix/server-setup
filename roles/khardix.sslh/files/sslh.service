[Unit]
PartOf=sslh.socket
Requires=sslh.socket

[Service]
ExecStart=/usr/sbin/sslh --config=/etc/sslh.cfg --verbose --foreground
KillMode=process
CapabilityBoundingSet=CAP_NET_BIND_SERVICE CAP_NET_ADMIN CAP_SETGID CAP_SETUID
PrivateTmp=true
PrivateDevices=true
ProtectSystem=full
ProtectHome=true
User=sslh
