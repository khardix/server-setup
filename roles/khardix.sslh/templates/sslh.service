[Unit]
PartOf=sslh.socket

[Service]
ExecStart=/usr/sbin/sslh {%- for name, port in services.items() %} --{{name}} localhost:{{port}} {%- endfor %} --verbose --foreground
KillMode=process
CapabilityBoundingSet=CAP_NET_BIND_SERVICE CAP_NET_ADMIN CAP_SETGID CAP_SETUID
PrivateTmp=true
PrivateDevices=true
ProtectSystem=full
ProtectHome=true
User=sslh
